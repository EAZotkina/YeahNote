<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorPrimaryDark">?attr/colorSurface</item>
        <item name="android:colorEdgeEffect">?attr/colorSecondary</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="textAppearanceButton">@style/TextAppearanceButton</item>
        <!-- Menu Items, EditTexts, Dialog Titles -->
        <item name="textAppearanceSubtitle1">@style/TextAppearanceSubtitle1</item>

        <!-- Required for the Settings page to look good -->
        <item name="android:textAppearanceListItem">?attr/textAppearanceBody1</item>
        <item name="android:textAppearanceListItemSecondary">?attr/textAppearanceBody2</item>

        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <style name="MainActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="TextAppearance.Pinned" parent="TextAppearanceButton">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="TextAppearanceTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0.05</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>


    <style name="TextAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearanceToolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearanceSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:letterSpacing">0.02</item>
    </style>


    <style name="EditTextTitle">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:hint">@string/title</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <style name="DateCreated" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:text">@string/date</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>


    <style name="AlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitle</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="PrimarySecondarySwap" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>


</resources>